#!/bin/rc

rfork e

fn usage {
	echo 'usage: ps2txt [gs-options] [input.ps] [output.txt]' >[1=2]
	exit usage
}

compat=(-'dCompatibilityLevel=1.2')
opt=()
while(! ~ $#* 0 && ~ $1 -* && ! ~ $1 - --){
	if(~ $1 '-dCompatibilityLevel='*)
		compat=()
	opt=($opt $1)
	shift
}
if(~ $1 --)
	shift

switch($#*){
case 0
	fin='-'
	fout='-'
case 1
	fin=$1
	fout='-'
case 2
	fin=$1
	fout=$2
case *
	usage
}

# We have to include the options twice because -I only takes effect
# if it appears before other options.

gscmd=( gs $opt -dSAFER -dNOPAUSE -dBATCH -dSIMPLE -q \
	$opt $compat \
	-s'OutputFile='$fout -c save -f ps2ascii.ps $fin )
exec $gscmd


